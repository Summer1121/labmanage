	<select id="selectAttendStatis" resultMap="AttendStatisMap">
		with
		a (id,user_id)as(
			select 
				id,
				user_id
			from course_user
			where course_id = #{courseId}
		),
		b (attend_time,attend_course_user_id)as(
			select 
				count(*) attend_time,
				attend_course_user_id
			from attend
			where attend_course_user_id in
			(
				select id
				from a
			)
			group by 
			attend_course_user_id
		),
		c(user_id,user_name) as
		(
			select 
				id user_id,
				user_name
			from user
			where id = any
			(
				select user_id
				from a
			)
		)
		select a.user_id,c.user_name, b.attend_time
		from a,b,c
		where b.attend_course_user_id = a.id
		and c.user_id =a.user_id
	</select>


